
.content{
	background: #007AFF;
	width: 100vw;
	height: 100vh;
}
.avatarWrapper{
	height: 30vh;
	width: 100vw;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: end;
	-webkit-align-items: flex-end;
	        align-items: flex-end;
}
.avatar{
	width: 300rpx;
	height: 240rpx;
	overflow: hidden;
}
.avatar .img{
	width: 100%;
}
.form{
	padding: 0 100rpx;
	margin-top: 80px;
}
.inputWrapper{
	width: 100%;
	height: 80rpx;
	background: #FFFFFF;
	border-radius: 20px;
	box-sizing: border-box;
	padding: 0 20px;
	margin-top: 25px;
}
.inputWrapper .input{
	width: 100%;
	height: 100%;
	text-align:center;
	font-size: 15px;
}
.loginBtn{
	width: 100%;
	height: 80rpx;
	background: #77B3D7;
	border-radius: 50rpx;
	margin-top: 50px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.loginBtn .btnValue{
	color: white;
}
.forgotBtn{
	text-align: center;
	color: #EAF6F9;
	font-size: 15px;
	margin-top: 20px;
}
.weixin{
	margin-top: 40px;
}

